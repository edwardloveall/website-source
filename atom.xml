---
layout: nil
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
	<title>Gordon Fontenot's Blog</title>
	<link href="http://gordonfontenot.com/atom.xml" rel="self" />
	<link href="http://gordonfontenot.com" />
	<updated>{{ site.time | date_to_xmlschema }}</updated>
	<id>http://www.gordonfontenot.com</id>
	
	{% for post in site.posts %}
	<entry>
		
		{% if post.type == "link" %}
		<title>{{ post.name | h }} ยง</title>
		{% else %}
		<title>{{ post.name | h }}</title>
		{% endif %}
		
		{% for category in post.categories %}
		<category term="{{category}}" scheme="http://www.sixapart.com/ns/types#tag" />
		{% endfor %}
		
		{% if post.type == "link" %}
		<link href="{{ post.source }}" />
		{% else %}
		<link href="http://gordonfontenot.com{{ post.url }}" />
		{% endif %}
		<updated>{{ post.date | date_to_xmlschema }}</updated>
		<id>gordonfontenot.com:{{ post.id }}</id>
		<content type="html">{{ post.content | h }}</content>
		<author>
			<name>{{ post.author_name }}</name>
			<uri>{{ post.author_uri }}</uri>
		</author>
	</entry>
	{% endfor %}
</feed>