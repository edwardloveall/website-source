<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>$title$</title>
    <description>$title$</description>
    <link>$root$</link>
    <atom:link href="$root$/feed/" rel="self" type="application/rss+xml" />
    $for(posts)$
      <item>
        <title>$title$</title>
        <description>$body$</description>
        <pubDate>$date$</pubDate>
        $if(ext_url)$
        <link>$ext_url$</link>
        <guid isPermaLink="true">$ext_url$</guid>
        $else$
        <link>$root$$url$</link>
        <guid isPermaLink="true">$root$$url$</guid>
        $endif$
      </item>
    $endfor$
  </channel>
</rss>
